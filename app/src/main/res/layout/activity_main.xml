<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <!--  Sample Dashboard screen with Two buttons -->
    <!--  Button to view all users screen -->
    <Button android:id="@+id/btnViewUsers"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/view_all_users"
        android:layout_marginTop="25dip"/>

    <!--  Button to create a new usert screen -->
    <Button android:id="@+id/btnCreateUser"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_new_users"
        android:layout_marginTop="25dip"/>

</LinearLayout>
